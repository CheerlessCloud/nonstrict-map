{
  "name": "nonstrict-map",
  "version": "0.0.0-development",
  "description": "Auto serialize and deserialize keys for ECMAScript 2016 Map",
  "main": "dist/index.js",
  "repository": "git@github.com:TeslaCtroitel/nonstrict-map.git",
  "author": "EnRoute <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "es6-map",
    "object-map",
    "nonstrict-map"
  ],
  "scripts": {
    "test": "ava",
    "test:dev": "ava --watch",
    "test:debug": "node --inspect --inspect-brk node_modules/ava/profile.js ",
    "cover": "nyc ava",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint",
    "lint:all": "eslint ./src ./test",
    "lint:fix": "eslint --fix ./src ./test",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@bubltechnology/customizable-commit-analyzer": "^1.0.2-0",
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "lint-staged": "^4.0.0",
    "nyc": "^11.0.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint-config-airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false
    },
    "env": {
      "node": true
    },
    "rules": {
      "strict": 0,
      "no-restricted-syntax": "off"
    }
  },
  "ava": {
    "files": [
      "**/*.test.js",
      "test/**/*.js"
    ],
    "source": [
      "src/*",
      "bin/*"
    ],
    "verbose": true
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6.0"
          },
          "useBuiltIns": true,
          "exclude": [
            "transform-regenerator"
          ]
        }
      ],
      "stage-0"
    ]
  },
  "release": {
    "analyzeCommits": "@bubltechnology/customizable-commit-analyzer"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "commitTypeMap": {
      "feat": "minor",
      "fix": "patch",
      "docs": "patch",
      "style": "null",
      "refactor": "patch",
      "perf": "patch",
      "test": "null",
      "build": "patch",
      "ci": "patch",
      "chore": "patch"
    }
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "lint"
  },
  "files": [
    "dist/*.*",
    "dist/**/*.*"
  ]
}
